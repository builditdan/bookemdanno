<div class="media">
  <div class="media-body">

    <%# if topic.bookmarks.show_bookmarks_filter(@filter).count > 0 %>
      <% if @showing_public %>
        <h2 class="media-heading">
           <%= topic.title %>
           <br>
          <small>Shared by <span style="color:orange;"><%= "#{user_name}" %></span></small>
        </h2>
        <%= render partial: "bookmarks/public_bookmarks", locals: {topic: topic, filter: @filter, preview_bookmark: current_user.preview_bookmark} %>
      <% else %>
        <h2 class="media-heading ">
          <%= link_to "#{topic.title}", topic %>
        </h2>
         <%= render partial: "bookmarks/your_bookmarks", locals: {topic: topic, filter: @filter, preview_bookmark: current_user.preview_bookmark} %>
      <% end %>
      <br>
  
    <%# end%>

  </div>
</div>
